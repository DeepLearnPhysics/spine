[run]
source = src/spine
omit = 
    */tests/*
    */test_*
    */conftest.py
    */setup.py
    */venv/*
    */virtualenv/*
    */__pycache__/*
    */migrations/*

[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

    # Don't complain about conditional imports that may not be available
    except ImportError:
    except ModuleNotFoundError:
    
    # Don't complain about torch-specific code when torch unavailable
    if TORCH_AVAILABLE:
    if torch is not None:
    
ignore_errors = True

[html]
directory = htmlcov

[xml]
output = coverage.xml